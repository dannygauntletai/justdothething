{
  "framework": "vite",
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "frontend/packages/website/dist",
  "installCommand": "npm install",
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "env": {
    "VITE_NODE_ENV": "production",
    "VITE_API_URL_PROD": "https://justdothething-backend.onrender.com/api"
  }
} 